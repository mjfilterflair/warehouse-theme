{% comment %}
  This snippet will display payment icons.
{% endcomment %}

<div class="payment-icons">
  {% for type in shop.enabled_payment_types %}
    {% assign icon_name = type | payment_type_icon %}
    {% if icon_name %}
      <img src="{{ icon_name | payment_type_img_url }}" alt="{{ type | payment_type_name }}" class="payment-icon" />
    {% endif %}
  {% endfor %}
</div>
